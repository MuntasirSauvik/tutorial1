{% extends '../common/layout.jinja2' %}

{% block subtitle %}{{page.name}} - {% endblock subtitle %}

{% block content %}

<p class="pull-right">
   <strong Welcome to chatroom: {{ res1.roomDescription }} </strong>
</p>


<div>
<p> <strong> Users in the chatroom: </strong></p>
<p class="pull-right">

 <table style="width:100%">
  <tr>
    <th width=100px>User Name</th>
    <th width=70px>User Id</th>
    <th>Role</th>
  </tr>
    {% for i in res3 %}
      <tr>
        <td>{{ i.name }}</td>
        <td>{{ i.id }}</td>
        <td>{{ i.role }}</td>
      </tr>
    {% endfor %}
 </table>
</p>
</div>

<p> You can join the chat by tying your message in the chat box</p><br>
{{ message }}

<div>
<p class="pull-right">
<br>
 <table style="width:100%">
  <tr>
    <th>User</th>
    <th>Message</th>
    <th>mid</th>
    <th>Time</th>
  </tr>
    {% for i in res2 %}
      <tr>
        <td>{{ i.creator.name }}</td>
        <td>{{ i.message_text }}</td>
        <td>{{ i.id }}</td>
        <td>{{ i.dateTime }}</td>
      </tr>
    {% endfor %}
 </table>
</p>
</div>

<form action="{{ url }}" method="post">
<input type="hidden" name="next" value="{{ next_url }}">
<div class="form-group">
    <label for="message">Chat: </label>
    <input style="width:600px" type="text" name="message"">
</div>
<div class="form-group">
    <button type="submit" name="form.submitted" value="send">Send</button>
</div>
</form>
<p>You can return to the
<a href="{{request.route_url('view_page', pagename='FrontPage')}}">FrontPage</a>.
</p>
{% endblock content %}